<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.fitark.helloworld"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.fitark.helloworld.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.fitark.helloworld.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="org.fitark.helloworld.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.fitark.helloworld.MainActivity" />
        </activity>
        <activity
            android:name="org.fitark.helloworld.CollectionDemoActivity"
            android:label="@string/title_activity_collection_demo"
            android:parentActivityName="org.fitark.helloworld.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.fitark.helloworld.MainActivity" />
        </activity>
        <activity
            android:name="org.fitark.helloworld.BackupRestoreActivity"
            android:label="@string/title_activity_backup_restore"
            android:parentActivityName="org.fitark.helloworld.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.fitark.helloworld.MainActivity" />
        </activity>
        <activity
            android:name="org.fitark.helloworld.ContactManagerActivity"
            android:label="@string/title_activity_contact_manager"
            android:parentActivityName="org.fitark.helloworld.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.fitark.helloworld.MainActivity" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>